<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/saveMePageBackgroundColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/saveMePageBarColor">

        <Button
            android:id="@+id/getHelpButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/getHelpButtonText"
            android:background="@color/saveMePageBarColor"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/rescueButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/rescueButtonText"
            android:background="@color/saveMePageBarColor"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/moreButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/moreButtonText"
            android:background="@color/saveMePageBarColor"
            android:textColor="@color/white"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainPageContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">


    </FrameLayout>


</LinearLayout>