<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/morePageMask"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/more_page_mask"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/morePageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:paddingHorizontal="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnuserProfile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:textSize="20sp"
                android:background="@drawable/btn_edge_color"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="@string/user_profile"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"

                />

            <Button
                android:visibility="gone"
                android:id="@+id/btnuserCertificate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:textSize="20sp"
                android:background="@drawable/btn_edge_color"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="@string/certificate"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>


        <Button
            android:id="@+id/btnHelpFeedback"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:background="@drawable/btn_edge_color"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="@string/help_and_feedback"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnAchiev"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:background="@drawable/btn_edge_color"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="@string/achievements"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnLanguage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:background="@drawable/btn_edge_color"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="@string/change_language"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:background="@drawable/btn_edge_color"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="@string/sign_out"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

</FrameLayout>